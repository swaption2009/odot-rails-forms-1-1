<%= title "Reset Your Password" %>

<%= form_tag password_resets_path do %>

  <div class="row">
    <div class="small-12 columns">
      <%= label_tag :email, "Email" %>
      <%= text_field_tag :email %>
      <%= submit_tag "Reset Password", class: "button radius expand" %>
    </div>
  </div>
<% end %>