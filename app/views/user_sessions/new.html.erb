<%= title "Sign In" %>

<%= form_tag user_sessions_path do %>

    <div class="row">
      <div class="small-12 columns">
        <%= label_tag :email, "Email Address" %>
        <%= text_field_tag :email, params[:email] %>
        <%= label_tag :password, "Password" %>
        <%= password_field_tag :password %>
        <%= label_tag :remember_me, "Remember Me?" %>
        <%= check_box_tag :remember_me %><br>
        <%= submit_tag "Sign In", class: "button expand radius" %>
        <%= link_to "Forgot Password", new_password_reset_path, class: "small-6 columns text-left" %>
        <%= link_to "Sign Up", new_user_path, class: "small-6 columns text-right" %>
      </div>
    </div>
<% end %>
